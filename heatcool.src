c		  print *,is,i+2,ie,x1b(i+2)/r,js,j+3,je,x2b(j+3)/
c     &  (theta)
				  
		 comp_h_pre(i+2,j+3)=comp_h_pre(i+2,j+3)*(c_heat)/
